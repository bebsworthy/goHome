{
  "name": "@gohome/localevent",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "convert": "tsx src/analyzer/main.ts",
    "convert:api": "concurrently \"pnpm api\" \"pnpm convert\"",
    "api": "tsx watch src/server.ts",
    "test": "dotenv -e .env.test -- vitest",
    "test:integration": "vitest integration/",
    "test:unit": "dotenv -e .env.test -- vitest unit/",
    "test:watch": "dotenv -e .env.test -- vitest watch",
    "test:all": "dotenv -e .env.test -- vitest run",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy && dotenv -e .env.test -- prisma migrate deploy",
    "db:studio": "prisma studio",
    "codegen:geocodage": "npx @hey-api/openapi-ts -i https://data.geopf.fr/geocodage/openapi.yaml -o src/generated/geocodage -c @hey-api/client-fetch",
    "codegen": "pnpm codegen:geocodage && pnpm db:generate"
  },
  "dependencies": {
    "@hey-api/client-fetch": "^0.11.0",
    "@hono/node-server": "^1.14.2",
    "@prisma/client": "^6.8.2",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.0",
    "hono": "^4.7.10",
    "node-fetch": "^3.3.2",
    "openai": "^5.0.1",
    "prisma": "^6.8.2",
    "string-similarity": "^4.0.4",
    "uuid": "^11.1.0",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.69.1",
    "@types/node": "^20.17.50",
    "@types/string-similarity": "^4.0.2",
    "dotenv-cli": "^8.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
